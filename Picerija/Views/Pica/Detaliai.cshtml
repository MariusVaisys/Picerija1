@model Pica

<h2>Model.Pavadinimas</h2>

<div class="thumbnail">
    <img src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Kaina</h3>
        <h3>
            <a href="#">@Model.Pavadinimas</a>
        </h3>
        <p>@Model.Sudetis</p>
        <div class="">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="Shoppingcart"
                   asp-action="AddToShoppingCart"
                   asp-route-picaId="@Model.PicaId">Prideti i krepseli</a>
            </p>
        </div>
    </div>
</div>
