@model ShoppingCartViewModel

    <h2>Jusu apsipirkimo krepšelis</h2>
<h3>Čia picos kurias užsakete</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Pasirinktas kiekis</th>
            <th>Pica</th>
            <th class="text-right">Kaina</th>
            <th class="text-right">Kaina</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShopingCart.shoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Kiekis</td>
                <td class="text-left">@line.Pica.Pavadinimas</td>
                <td class="text-right">@line.Pica.Kaina.ToString("c")</td>
                <td class="text-right">@((line.Kiekis * line.Pica.Kaina).ToString("c"))</td>
            </tr>
        }
    <tr>
        <td colspan="3" class="text-right">Pilna Kaina:</td>
        <td class="text-right">
            @Model.ShopingCartTotal.ToString("c");
        </td>
    </tr>
        
    </tbody>
</table> 

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Uzsakymas" asp-action="Moketi">Moketi dabar</a>
</div>